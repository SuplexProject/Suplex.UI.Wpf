<Window x:Class="Suplex.UI.Wpf.ServiceConnectDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Suplex.UI.Wpf"
        Title="Connect to WebApi" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Suplex WebApi URL" />
        <TextBox Grid.Column="1" Name="txtWebApiUrl" Text="http://localhost:20000/suplex/" />

        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Connect" Click="cmdOk_Click" />
            <Button Content="Cancel" Click="cmdCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
